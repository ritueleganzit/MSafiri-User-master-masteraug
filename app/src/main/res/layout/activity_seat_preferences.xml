<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.eleganz.msafiri.SeatPreferencesActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEndWithActions="0dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/back"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.eleganz.msafiri.lib.RobotoMediumTextView
                android:layout_centerInParent="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                android:textStyle="bold"
                android:text="Seat Preference"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_above="@+id/nextbtn"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="110dp"
        android:id="@+id/img"
        android:src="@drawable/kriti"
        android:layout_gravity="center"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="110dp" />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img">
        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:progressTint="#bf1717"
            android:progress="4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"></RatingBar>
        <com.eleganz.msafiri.lib.RobotoMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(30)"/>
    </LinearLayout>
    <com.eleganz.msafiri.lib.RobotoMediumTextView
        android:layout_width="wrap_content"
        android:id="@+id/txt1"

        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_car"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Vehicle Name: KUC 265U"
        android:textColor="#043A60"

        android:textColorHint="#3B3B3B"
        android:textStyle="bold" />
    <com.eleganz.msafiri.lib.RobotoMediumTextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_finish"
        android:drawablePadding="1dp"
        android:gravity="left|center"
        android:paddingLeft="3dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ratingBar"
        android:text="15 min, away"
        android:textColor="#043A60"
        android:textColorHint="#3B3B3B"
        android:textStyle="bold" />
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="250dp"
        android:id="@+id/imgdata"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lin">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_loc"/>

        <View
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:background="@drawable/dashed" />

        <ImageView
            android:layout_width="27dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_loc" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="2dp"
        android:id="@+id/lin4"
        android:layout_below="@+id/imgdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:gravity="center"
                android:layout_width="match_parent"                       android:layout_height="wrap_content"
                android:text="Pickup Location" />
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$30.00" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Location" />
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/address"  />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myedittext"
        android:text="Select Seating Preference"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioGroup
            android:layout_below="@+id/title"
android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:textAlignment="textStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:buttonTint="@color/colorPrimaryDark"
                android:id="@+id/rd_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layoutDirection="rtl"

                android:layout_gravity="start"
                android:drawablePadding="30dp"
                android:textSize="12dip"
                android:gravity="center"
                android:text="Window" />
            <View
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RadioButton
                android:textAlignment="textStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:buttonTint="@color/colorPrimaryDark"
                android:id="@+id/rd_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layoutDirection="rtl"

                android:layout_gravity="start"
                android:drawablePadding="30dp"
                android:textSize="12dip"
                android:gravity="center"
                android:text="Middle" />
            <View
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RadioButton
                android:textAlignment="textStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:buttonTint="@color/colorPrimaryDark"
                android:id="@+id/rd_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layoutDirection="rtl"

                android:layout_gravity="start"
                android:drawablePadding="30dp"
                android:textSize="12dip"
                android:gravity="center"
                android:text="Aisle" />
            <View
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RadioButton
                android:textAlignment="textStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:buttonTint="@color/colorPrimaryDark"
                android:id="@+id/rd_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layoutDirection="rtl"

                android:layout_gravity="start"
                android:drawablePadding="30dp"
                android:textSize="12dip"
                android:gravity="center"
                android:text="No Preference" />
        </RadioGroup>
        </ScrollView>

</LinearLayout>
    <Button
        android:id="@+id/nextbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
        android:text="Next"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="#0D3A61"/>

</RelativeLayout>