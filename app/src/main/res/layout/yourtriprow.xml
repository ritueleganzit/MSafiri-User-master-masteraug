<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout
android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.eleganz.msafiri.utils.SquareImageView
        android:layout_width="fill_parent"
        android:id="@+id/squareImageView"
        android:scaleType="centerCrop"
        android:src="@drawable/mapp"
        android:layout_height="fill_parent">

    </com.eleganz.msafiri.utils.SquareImageView>
    <TextView
        android:layout_width="match_parent"
        android:text="Ongoing"
        android:id="@+id/tvongoing"
        android:visibility="gone"
        android:gravity="end"
        android:textColor="#60bf04"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_height="wrap_content" />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_gravity="bottom"
         android:background="@color/translucent_grey">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:weightSum="1"
             android:padding="10dp"
             >

             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_weight=".4"
                 android:layout_gravity="center"
                 android:gravity="start"
                 >


                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Pickup Location"
                     android:maxLines="1"
                     android:fontFamily="@font/roboto_regular"
                     android:ellipsize="end"
                     android:id="@+id/pickuploc"
                     android:textColor="@android:color/black"
                     android:textStyle="bold"/>

                 <TextView
                     android:id="@+id/from_date"
                     android:textAppearance="@style/TextAppearance.AppCompat.Small"
                     android:fontFamily="@font/roboto_light"
                     android:singleLine="true"
                     android:ellipsize="end"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="05/04/18 at 9:00 AM"
                     android:textColor="@android:color/black"
                     />


             </LinearLayout>

             <ImageView
                 android:layout_width="0dp"
                 android:layout_height="40dp"
                 android:src="@drawable/transfer"
                 android:layout_weight=".2"
                 android:padding="5dp"
                 android:layout_gravity="center"/>

             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_weight=".4"
                 android:gravity="right"
                 android:layout_gravity="center"
                 >


                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Destination Location"
                     android:maxLines="1"
                     android:id="@+id/desloc"
                     android:fontFamily="@font/roboto_regular"
                     android:ellipsize="end"
                     android:textColor="@android:color/black"
                     android:textStyle="bold"/>

                 <TextView
                     android:id="@+id/to_date"
                     android:textAppearance="@style/TextAppearance.AppCompat.Small"
                     android:fontFamily="@font/roboto_light"
                     android:singleLine="true"
                     android:ellipsize="end"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="05/04/18 at 9:00 AM"
                     android:textColor="@android:color/black"
                     />


             </LinearLayout>


         </LinearLayout>
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#b7b7b7"/>
         <LinearLayout
             android:layout_margin="8dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <LinearLayout
                 android:layout_weight="1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">
                 <com.eleganz.msafiri.lib.RobotoMediumTextView
                     android:layout_width="wrap_content"
                     android:layout_marginTop="3dp"
                     android:textStyle="bold"
                     android:textColor="#000"

                     android:id="@+id/vehicle_name_dr"
                     android:layout_height="wrap_content"
                     android:text="Vehicle Name KUC 265U"/>
                 <com.eleganz.msafiri.lib.RobotoMediumTextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#181818"
                     android:id="@+id/fullname_dr"
                     android:text="Driver Name"/>


             </LinearLayout>

             <LinearLayout
                 android:layout_weight="1"
                 android:layout_gravity="end"
                 android:gravity="end"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">
                 <com.eleganz.msafiri.lib.RobotoMediumTextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="$30.00"
                     android:id="@+id/trip_price"
                     android:textColor="#000"
                     android:textStyle="bold"/>

                 <com.eleganz.msafiri.lib.RobotoMediumTextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="3dp"
                     android:textColor="#181818"
                     android:text="Cash"/>
             </LinearLayout>

         </LinearLayout></LinearLayout>


   <com.battleent.ribbonviews.RibbonTag
       android:layout_width="100dp"
       android:layout_height="20dp"
       android:id="@+id/textribbon"
       android:text="Completed"
       android:gravity="center"
       android:layout_gravity="start|left"
       android:layout_marginLeft="-25dp"
       android:layout_marginTop="20dp"
       android:rotation="-50"
       app:tag_ribbonColor="@color/main_green_stroke_color"/>
</FrameLayout>
</android.support.v7.widget.CardView>