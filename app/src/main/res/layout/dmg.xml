<RelativeLayout android:id="@+id/layoutBottom"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/backgroundwhite"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/RatingBar"
        android:rating="2"
        android:progressTint="#bf1717"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"></RatingBar>
    <com.eleganz.msafiri.lib.RobotoMediumTextView
        android:layout_width="wrap_content"
        android:id="@+id/txt1"

        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_name"
        android:drawablePadding="2dp"
        android:gravity="left|center"
        android:paddingLeft="8dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ratingBar"
        android:text="Vehicle Name: KUC 265U"
        android:textColor="#043A60"

        android:textColorHint="#3B3B3B"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <com.eleganz.msafiri.lib.RobotoMediumTextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_finish"
            android:drawablePadding="2dp"
            android:gravity="left|center"
            android:paddingLeft="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ratingBar"
            android:text="15 min, away"
            android:textColor="#043A60"
            android:textColorHint="#3B3B3B"
            android:textStyle="bold" />
        <com.eleganz.msafiri.lib.RobotoMediumTextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_desk"
            android:drawablePadding="2dp"
            android:gravity="left|center"
            android:paddingLeft="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ratingBar"
            android:text="Window"
            android:textColor="#043A60"
            android:textColorHint="#3B3B3B"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="200dp"
        android:id="@+id/imgdata"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lin">
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_loc"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:background="@drawable/dashed" />

        <ImageView
            android:layout_width="27dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_loc" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin4"
        android:layout_below="@+id/imgdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
android:layout_weight="1"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Location" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Location" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$30.00" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Location" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Location" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lin4">

        <Button
            android:id="@+id/btn"
            android:text="Change PickUp"
android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/lin4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"            android:layout_weight="1"
            android:text="Tell Your Driver"
            android:layout_toRightOf="@+id/btn"
            android:layout_below="@+id/lin4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin5"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:background="#0D3A61"/>
</RelativeLayout>