<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_margin="5dp"
                android:id="@+id/circleview"
                android:layout_gravity="center"

                android:layout_height="50dp"
                android:src="@drawable/user_image" />

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RatingBar
                    android:layout_gravity="center"
                    android:rating="2"
                    android:id="@+id/rating"
                    android:progressTint="@android:color/holo_red_dark"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"/>

                <com.eleganz.msafiri.lib.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(30)"
                    android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
             <ImageView
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:src="@drawable/ic_car"/>
                <com.eleganz.msafiri.lib.RobotoMediumTextView
                    android:layout_width="match_parent"
                    android:id="@+id/vehicle_name"
                    android:focusable="false"
                    android:scrollHorizontally="true"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:text="Vehicle Name"
                    android:textColor="#043A60"
                    android:textColorHint="#3B3B3B"
                    android:textStyle="bold" />
                <com.eleganz.msafiri.lib.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textColor="#043A60"
                    android:textColorHint="#3B3B3B"
                    android:ellipsize="marquee"
                    android:inputType="textCapSentences"
                    android:marqueeRepeatLimit="marquee_forever"                    android:textSize="12sp"
                    android:paddingLeft="5dp"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_location"/>
                <com.eleganz.msafiri.lib.RobotoMediumTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:id="@+id/pickup_destination"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"


                    android:src="@drawable/ic_time"/>
                <com.eleganz.msafiri.lib.RobotoMediumTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:inputType="textCapWords"
                    android:id="@+id/datetime"
                    android:textColor="#043A60"
                    android:textColorHint="#3B3B3B"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:gravity="end"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:background="@drawable/pill_bg"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:text="Book"
                android:layout_gravity="center"
                android:id="@+id/book"
                android:textColor="@android:color/white" />
            <com.eleganz.msafiri.lib.RobotoMediumTextView
                android:layout_marginTop="5dp"
                android:textColor="#9b140e"
                android:id="@+id/trip_price"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>