<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/msafiriblur"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context="com.eleganz.msafiri.MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:id="@+id/logo"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/logo"
        android:layout_marginTop="40dp"

        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.eleganz.msafiri.lib.RobotoMediumTextView
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your Email Address below to reset your Password."
            android:gravity="center"
            android:id="@+id/forgotpwdtext"
            android:textStyle="bold"
            android:textColor="#0D3A61"
            android:layout_gravity="center"
            />
        <EditText
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shadow"
            android:drawableLeft="@drawable/envelope"
            android:drawablePadding="2dp"
            android:ems="10"
            android:id="@+id/forgotpwdedemail"
            android:hint="@string/hintemail"
            android:padding="8dp"
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp"
            android:textColorHint="#3B3B3B" />



        <Button
            android:fontFamily="@font/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:background="#0D3A61"
            android:text="Submit"
            android:id="@+id/forgotpwdbtn"
            android:textColor="@android:color/white" />


            <com.eleganz.msafiri.lib.RobotoMediumTextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alreadymember"
                android:gravity="center"
                android:id="@+id/signtxt"
                android:textColor="#0D3A61"
                android:layout_gravity="center"
                />

    </LinearLayout>

</RelativeLayout>
