<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEndWithActions="0dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/back"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.eleganz.msafiri.lib.RobotoMediumTextView
                android:layout_centerInParent="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

                android:textStyle="bold"
                android:text="Current Trip"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <com.google.android.gms.maps.MapView
android:layout_below="@+id/toolbar"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:layout_above="@+id/temp"
        android:id="@+id/map">

    </com.google.android.gms.maps.MapView>
    <RelativeLayout
        android:id="@+id/temp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/cnfrel"
        android:layout_width="match_parent"
        android:layout_height="275dp"
android:layout_above="@+id/lin5"
        android:layout_gravity="bottom">

        <RelativeLayout android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/backgroundwhite"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="#bf1717"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal">

            </RatingBar>

            <com.eleganz.msafiri.lib.RobotoMediumTextView
                android:layout_width="wrap_content"
                android:id="@+id/fullname"

                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:paddingLeft="8dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ratingBar"
                android:text=""

                android:textAllCaps="true"
                android:textColor="#043A60"

                android:textColorHint="#3B3B3B"
                android:textStyle="bold" />
            <com.eleganz.msafiri.lib.RobotoMediumTextView
                android:layout_width="wrap_content"
                android:id="@+id/cr_vehicle_name"

                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_car"
                android:drawablePadding="2dp"
                android:gravity="left|center"
                android:paddingLeft="8dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/fullname"
                android:text=""
                android:textColor="#043A60"

                android:textColorHint="#3B3B3B"
                android:textStyle="bold" />
            <LinearLayout

                android:id="@+id/lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cr_vehicle_name"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <com.eleganz.msafiri.lib.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_finish"
                    android:drawablePadding="1dp"
                    android:gravity="left|center"
                    android:id="@+id/cr_calculate_time"
                    android:paddingLeft="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ratingBar"
                    android:text=""
                    android:textColor="#043A60"
                    android:textColorHint="#3B3B3B"
                    android:textStyle="bold" />
                <!--<com.eleganz.msafiri.lib.RobotoMediumTextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_desk"
                    android:drawablePadding="1dp"
                    android:gravity="left|center"
                    android:paddingLeft="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ratingBar"
                    android:text="Window"
                    android:textColor="#043A60"
                    android:textColorHint="#3B3B3B"
                    android:textStyle="bold" />-->

            </LinearLayout>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="250dp"
                android:id="@+id/imgdata"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lin">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_loc"/>

                <View
                    android:layout_width="175dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.5"
                    android:background="@drawable/dashed" />

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_loc" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginBottom="2dp"
                android:id="@+id/lin4"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                android:layout_below="@+id/imgdata"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"

                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.eleganz.msafiri.lib.RobotoMediumTextView
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/cr_pickup"
                        android:layout_width="wrap_content"                       android:layout_height="wrap_content"
                        android:text="Pickup" />
                    <com.eleganz.msafiri.lib.RobotoMediumTextView
                        android:gravity="center"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"


android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/cr_pickupaddress"
                         />
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.eleganz.msafiri.lib.RobotoMediumTextView
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/cr_trip_price"
                        android:textColor="@color/colorPrimary"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         />

                </LinearLayout>

                <LinearLayout

                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.eleganz.msafiri.lib.RobotoMediumTextView
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/cr_dest"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Destination" />
                    <com.eleganz.msafiri.lib.RobotoMediumTextView
                        android:id="@+id/cr_destaddress"
                        android:gravity="center"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:singleLine="true" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fab"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|center_horizontal"
            android:src="@drawable/user_image"
            app:elevation="6dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin5"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
     >

        <!--<Button

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:id="@+id/btn"
            android:text="Change PickUp"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/lin4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>-->
        <Button
            android:id="@+id/tellbtn"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_weight="1"
            android:text="Tell Your Driver"
            android:fontFamily="@font/roboto_regular"
            android:layout_below="@+id/lin4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin5"
            android:text="Cancel Ride"
            android:id="@+id/cancelride"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@android:color/white"
            android:background="#0D3A61"/>
    </LinearLayout>




</RelativeLayout>