<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/msafiriblur"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context="com.eleganz.msafiri.MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:id="@+id/logo"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/logo"
        android:layout_marginTop="40dp"

        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.eleganz.msafiri.lib.RobotoMediumTextView
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the otp that you received through email"
            android:gravity="center"
            android:id="@+id/verificationcode"
            android:textStyle="bold"
            android:textColor="#0D3A61"
            android:layout_gravity="center"
            />

        <com.chaos.view.PinView
            android:id="@+id/firstPinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
android:layout_gravity="center_horizontal"
            android:hint="0"
            android:inputType="number"
            android:itemBackground="#ffffff"
            android:padding="5dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cursorColor="@color/colorButton"
            app:cursorWidth="2dp"
            app:hideLineWhenFilled="true"
            app:itemCount="4"
            app:itemHeight="48dp"
            app:itemRadius="4dp"
            app:itemSpacing="4dp"
            app:itemWidth="48dp"
            app:lineColor="@color/colorButton"
            app:lineWidth="2dp"
            app:viewType="rectangle"  />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:background="#0D3A61"
            android:text="Submit"
            android:id="@+id/submit_verification"
            android:textColor="@android:color/white" />



    </LinearLayout>

</RelativeLayout>
